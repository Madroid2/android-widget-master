<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_margin="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/widget_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/holo_blue_dark"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stocks Market Widget"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:paddingStart="@dimen/widget_header_padding"
                android:paddingLeft="@dimen/widget_header_padding"
                android:paddingEnd="@dimen/widget_header_padding"
                android:paddingRight="@dimen/widget_header_padding"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:src="@drawable/play"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:src="@drawable/pause"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:layout_gravity="end"
                android:src="@drawable/setting"/>
        </LinearLayout>
        <TextView
            android:id="@+id/widget_list_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:duplicateParentState="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true">

            <!--android:text="SBUX 37.28 +1.50 0.55 Apple 104.40 -3.40 0.88 Pepsico 123.23 +4.50 1.24 STIN 37.28 +1.50 0.55 Bharti 104.40 -3.40 0.88 AdityaBirla 123.23 +4.50 1.24"-->

            <requestFocus
                android:duplicateParentState="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </TextView>

        <TextView
            android:id="@+id/temp_widget_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@android:color/white"/>

        <!--<ListView-->
            <!--android:id="@+id/widget_list"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:scrollbars="vertical"-->
            <!--android:divider="#999999"-->
            <!--android:dividerHeight="0.67dp"-->
            <!--android:drawSelectorOnTop="true"-->
            <!--android:scrollbarThumbVertical="@color/colorPrimary"-->
            <!--android:background="@android:color/white">-->
        <!--</ListView>-->
    </LinearLayout>

</FrameLayout>